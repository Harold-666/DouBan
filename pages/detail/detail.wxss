/* pages/detail/detail.wxss */
.item-heard{
  padding: 60rpx 30rpx;
}

.item-heard .item-title{
  font-size: 50rpx;
}

.item-heard .item-detail{
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.item-detail .right-detail{
  width: 200rpx;
  height: 300rpx;
}

.right-detail image{
  width: 100%;
  height: 100%;
}

.item-detail .left-detail{
  flex: 1;
  margin-right: 20rpx;
}

.left-detail .item-rate{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.item-rate .comment-persons{
  font-size: 30rpx;
  color: #ccc;
  margin-left: 20rpx;
}

.left-detail .item-sub-detail{
  margin-top: 30rpx;
}

.item-sub-detail view{
  margin-bottom: 10rpx;
}

.item-info-group{
  font-size: 32rpx;
  padding: 10rpx 30rpx;
}

.item-info-group .item-info-title{
  flex: 1;
  color: #b3b3b3;
  margin-bottom: 20rpx;
}

.item-info-group .item-info{
  color: #353535;
  text-indent: 64rpx;
}

.item-tags{
  padding: 30rpx;
}

.item-tags .item-tags-title{
  font-size: 32rpx;
  color: #b3b3b3;
  margin-bottom: 20rpx;
}

.item-tags-list{
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.item-tags-list text{
  background-color: #f5f5f5;
  color: #353535;
  font-size: 32rpx;
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.comment-list-group{
  padding: 60rpx 30rpx;
}

.comment-list-group .comment-title{
  font-size: 32rpx;
  color: #b3b3b3;
}

.more-comment{
  font-size: 36rpx;
  color: #00b26a;
  text-align: center;
  margin-bottom: 60rpx;
}