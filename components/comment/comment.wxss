/* components/comment/comment.wxss */
.comment-group{
  display: flex;
  justify-content: flex-start;
  padding: 40rpx 0rpx;
}

.left-comment{
  width: 70rpx;
  margin-right: 20rpx;
}

.left-comment .avatar{
  height: 70rpx;
  width: 70rpx;
  border-radius: 50%;
}

.comment-group .right-comment{
  flex: 1;
}

.right-comment .username-rate{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 20rpx;
}

.username-rate .username{
  margin-right: 20rpx;
}

.right-comment .release-time{
  font-size: 32rpx;
  color: #b3b3b3;
  margin-bottom: 20rpx;
}

.right-comment .content{
  font-size: 32rpx;
  color: #353535;
  margin-bottom: 20rpx;
}